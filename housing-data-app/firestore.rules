rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Favorites collection rules
    match /favorites/{favoriteId} {
      // Allow users to read only their own favorites
      allow read: if request.auth != null
        && request.auth.uid == resource.data.userId;

      // Allow users to create favorites for themselves
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;

      // Allow users to update only their own favorites
      allow update: if request.auth != null
        && request.auth.uid == resource.data.userId
        && request.auth.uid == request.resource.data.userId;

      // Allow users to delete only their own favorites
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }

    // Allow users to query their own favorites
    match /favorites/{document=**} {
      allow list: if request.auth != null
        && request.query.limit <= 100;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
